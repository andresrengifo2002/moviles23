<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/black"
    android:background="@drawable/imagenpro"
    tools:context=".perfil.Perfil">

    <Button
        android:id="@+id/button4"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="@color/white"
        android:textColorHighlight="#FFFFFF"

        android:textColorLink="#FFFFFF"
        app:strokeColor="@color/white" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="193dp"
        android:layout_height="112dp"
        android:layout_gravity="center"

        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="118dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        tools:text="Ana Maria Palacio Rios" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="373dp"
        android:layout_height="415dp"
        android:layout_margin="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/custom_edit"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1">

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="384dp"
                android:layout_height="30dp"


                android:text="Correo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="293dp" />

            <EditText
                android:id="@+id/edit1"
                android:layout_width="238dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="anarios220@gmail.com"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="323dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="391dp"
                android:layout_height="32dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="384dp"
                tools:text="Ficha" />

            <EditText
                android:id="@+id/edit2"
                android:layout_width="232dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:text="2427882"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="432dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="364dp"
                android:layout_height="32dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="487dp"
                tools:text="Centro de Formacion" />

            <EditText
                android:id="@+id/edit3"
                android:layout_width="237dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="CTPI"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="529dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>